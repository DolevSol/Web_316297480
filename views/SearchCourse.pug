extends layout
block content
    .container
        .header חיפוש קורסים
        .toggle-container
            .subheader  אפשריות סינון מתקדמות:
            label.switch
                input#checkbox(type="checkbox", value="false", onchange="disableCourse()")
                span.slider

        form.formScreen4(action="/CourseResult" method="get")
            .box
                p
                    label(for="departmentNumber") מספר מחלקה:
                    select#departmentNumber.formScreen4SelectStyle(name="departmentNumber", required, onchange="selectElement('courseNumber','0');DependentDropdown('departmentNumber','courseNumber');")
                        option.textInSelect(value="", disabled, selected) בחר מספר מחלקה
                        each department in departments
                            option(value=department.department_id) #{department.department_id} - #{department.department_name}

                p
                    label(for="courseNumber") מספר קורס:
                    select#courseNumber.formScreen4SelectStyle(name="courseNumber", disabled)
                        option.textInSelect(value="0", disabled, selected) בחר מספר קורס

            .box
                p
                    label(for="hardness") מדד קושי:
                    select#hardness.formScreen4SelectStyleShort(name="hardness", disabled)
                        option.textInSelect(value="", disabled, selected) בחר מדד קושי
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="4") 4
                        option(value="5") 5
                p
                    label(for="load") מדד העומס:
                    select#load.formScreen4SelectStyleShort(name="load", disabled)
                        option.textInSelect(value="", disabled, selected) בחר מדד עומס
                        option(value="1") 1
                        option(value="2") 2
                        option(value="3") 3
                        option(value="4") 4
                        option(value="5") 5
            button.button5(type="submit") חפש
